% ==================== CHAPTER FORMATTING BASE ====================
% Basic chapter structure (specific formatting in content layers)

% Chapter title formatting - no auto-numbering, headings contain numbers already
\titleformat{\chapter}[display]
  {\normalfont\huge\bfseries}
  {}  % No chapter number prefix
  {0pt}
  {\Huge}

% PAGE BREAKS: Now handled entirely by Lua filter
% REMOVED: Flag system no longer needed with Lua filter approach

% Chapter redefinition - NUCLEAR approach: completely disable book class page breaks
\makeatletter
% Save the original chapter formatting but remove ALL page break mechanisms
\let\old@chapter\@chapter
\let\old@schapter\@schapter
\renewcommand{\@chapter}[2][]{%
  % NO \clearpage, NO \cleardoublepage - let Lua filter handle everything
  \old@chapter[#1]{#2}%
}
\renewcommand{\@schapter}[1]{%
  % NO \clearpage, NO \cleardoublepage - let Lua filter handle everything
  \old@schapter{#1}%
}
% Also disable any clearpage in the chapter command itself
\renewcommand\chapter{%
  % REMOVED: All page break logic
  \thispagestyle{plain}%
  \global\@topnum\z@
  \@afterindentfalse
  \secdef\@chapter\@schapter
}
\makeatother

% Apply spacing to our redefined chapter (AFTER redefinition)
\titlespacing*{\chapter}{0pt}{10pt}{20pt}

% Part redefinition - simplified (no flag system needed with Lua filter)
\let\oldpart\part  
\renewcommand{\part}[2][]{%
  \clearpage%
  \thispagestyle{empty}%
  \ifx&#1&%
    \oldpart{#2}%
  \else%
    \oldpart[#1]{#2}%
  \fi%
  % REMOVED: \afterparttrue - flag system no longer needed
}

% Part formatting - no auto-numbering, headings contain numbers already
\titleformat{\part}[display]
  {\normalfont\LARGE\bfseries\centering}
  {}  % No part number prefix
  {0pt}
  {\huge}
\titlespacing*{\part}{0pt}{0pt}{40pt}

